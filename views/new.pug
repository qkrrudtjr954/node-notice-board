doctype html
html
  head
    title
    meta(charset='utf-8')
  body
    h1
      a(href='/topic')!='Server Side Javascript'

    ul
      each val in files
        li
          a(href='/topic/'+val)!=val


    form(action='/topic' method='post')
      p
        span!='title'
      p
        input(type='text' name='title')
      p
        span!='content'
      p
        textarea(name='content')
      p
        input(type='submit' value='submit')
