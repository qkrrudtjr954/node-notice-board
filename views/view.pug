doctype html
html
  head
    title
    meta(charset='utf-8')
  body
    h1
      a(href='/topic')!='Server Side Javascript'

    ul
      each val in files
        li
          a(href='/topic/'+val)!=val

    if title && data
      article
        h2!=title
        p!=data

    br
    a(href='/topic/new')!='post'
